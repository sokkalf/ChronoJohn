<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/new_timer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <Button
            android:id="@+id/seconds_down"
            android:layout_width="75dip"
            android:layout_height="40dip"
            android:text="-"
            android:layout_toRightOf="@+id/minutes_down"
            android:layout_below="@+id/edit_seconds">
    </Button>
    <Button
            android:id="@+id/seconds_up"
            android:layout_width="75dip"
            android:layout_height="40dip"
            android:text="+"
            android:layout_above="@+id/edit_seconds"
            android:layout_toRightOf="@+id/minutes_up">
    </Button>
    <EditText
            android:id="@+id/edit_seconds"
            android:layout_width="75dip"
            android:layout_height="wrap_content"
            android:text=""
            android:inputType="number"
            android:gravity="right"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/edit_minutes"
            android:layout_centerVertical="true">
    </EditText>
    <Button
            android:id="@+id/hours_down"
            android:layout_width="75dip"
            android:layout_height="40dip"
            android:text="-"
            android:layout_toLeftOf="@+id/minutes_down"
            android:layout_below="@+id/edit_hours">
    </Button>
    <Button
            android:id="@+id/hours_up"
            android:layout_width="75dip"
            android:layout_height="40dip"
            android:text="+"
            android:layout_above="@+id/edit_hours"
            android:layout_toLeftOf="@+id/minutes_up">
    </Button>
    <EditText
            android:id="@+id/edit_hours"
            android:layout_width="75dip"
            android:layout_height="wrap_content"
            android:text=""
            android:inputType="number"
            android:gravity="right"
            android:textSize="18sp"
            android:layout_toLeftOf="@+id/edit_minutes"
            android:layout_centerVertical="true">
    </EditText>
    <Button
            android:id="@+id/minutes_down"
            android:layout_height="40dip"
            android:layout_width="75dip"
            android:text="-"
            android:layout_below="@+id/edit_minutes"
            android:layout_centerHorizontal="true">
    </Button>
    <Button
            android:id="@+id/minutes_up"
            android:layout_width="75dip"
            android:layout_height="40dip"
            android:text="+"
            android:layout_above="@+id/edit_minutes"
            android:layout_centerHorizontal="true">
    </Button>
    <EditText
            android:id="@+id/edit_minutes"
            android:layout_width="75dip"
            android:layout_height="wrap_content"
            android:text=""
            android:inputType="number"
            android:gravity="right"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
    </EditText>
    <Button
            android:id="@+id/save_timer"
            android:layout_width="75dip"
            android:layout_height="40dip"
            android:text="OK"
            android:layout_below="@+id/minutes_down"
            android:layout_centerHorizontal="true">
    </Button>
    <TextView
        android:id="@+id/timer_name_label"
        android:layout_width="220dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="28sp"
        android:layout_above="@+id/timer_name"
        android:layout_centerHorizontal="true"
        android:text="Create timer"/>
    <EditText
        android:id="@+id/timer_name"
        android:layout_above="@+id/minutes_up"
        android:layout_centerHorizontal="true"
        android:gravity="left"
        android:hint="Type a name..."
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_width="220dip"/>
</RelativeLayout>
